---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";
import Icon from "@ui/icons/Icon.astro";

// SEO metadata for the page
const seo = {
  title: "News - GMTEC",
  description: "Stay updated with the latest news and developments from GMTEC Group and the automotive sector.",
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "inLanguage": "en-US",
  "@id": Astro.url.href,
  "url": Astro.url.href,
  "name": "News - GMTEC",
  "description": "Follow GMTEC's latest news and automotive industry insights through our LinkedIn updates.",
  "isPartOf": {
    "@type": "WebSite",
    "url": `${Astro.site}`,
    "name": "GMTEC",
    "description": "GMTEC Group is a consulting company providing expertise in the Automotive sector since 2003.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
        News
      </h1>
      <p class="mt-8 text-pretty text-lg font-medium text-slate-700 sm:text-xl/8">
        Follow our LinkedIn page to find out about our latest news and developments in the automotive sector.
      </p>
    </div>
  </section>

  {/* LinkedIn Integration Section */}
  <section class="mx-auto max-w-[85rem] px-4 pb-24 sm:px-6 lg:px-8 lg:pb-32">
    <div class="mx-auto max-w-4xl">
      <div class="rounded-3xl bg-linear-to-br/oklch from-teal-100 via-transparent to-white p-8 text-center ring-1 ring-slate-200">
        <Icon name="linkedin" class="mx-auto size-16 text-teal-600" />
        <h2 class="mt-6 text-balance text-2xl font-semibold text-slate-800">
          Follow us on LinkedIn
        </h2>
        <p class="mt-4 text-pretty text-lg text-slate-600">
          Join us now to stay informed about our latest projects, industry insights, and company updates.
        </p>
        <div class="mt-8">
          <a
            href="https://www.linkedin.com/company/gmtec-group"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center rounded-xl bg-teal-600 px-6 py-3 text-base font-medium text-white shadow-sm transition-all duration-150 hover:bg-teal-700 focus:bg-teal-700 focus:outline-hidden"
          >
            Visit our LinkedIn page
            <Icon name="externalLink" class="ml-2 size-5" />
          </a>
        </div>
      </div>

      {/* LinkedIn Feed Widget - Ready for integration */}
      <div class="mt-12">
        <div class="rounded-2xl bg-white p-6 ring-1 ring-slate-200">
          <div class="text-center">
            <h3 class="text-lg font-semibold text-slate-800 mb-4">Latest LinkedIn Updates</h3>
            <div id="linkedin-feed-widget" class="min-h-[400px] flex items-center justify-center">
              <div class="text-slate-500">
                <div class="mb-4">
                  <Icon name="linkedin" class="size-12 mx-auto text-teal-600" />
                </div>
                <p class="text-sm mb-2">Ready for LinkedIn feed integration</p>
                <p class="text-xs">Choose from: Elfsight, Juicer.io, or EmbedSocial</p>
              </div>
            </div>
          </div>
        </div>
        
        {/* Implementation comment for developers */}
        <!-- 
        LinkedIn Feed Integration Options:
        
        1. Elfsight (Recommended): 
           - Sign up at elfsight.com
           - Generate LinkedIn widget
           - Replace the content in #linkedin-feed-widget with the generated code
        
        2. Juicer.io:
           - Create account at juicer.io  
           - Connect LinkedIn company page
           - Use provided embed code
        
        3. EmbedSocial:
           - Setup at embedsocial.com
           - Configure LinkedIn feed widget
           - Embed the widget code
        
        All options provide real-time updates and customization.
        -->
      </div>
    </div>
  </section>

  {/* Recent Updates Section */}
  <section class="mx-auto max-w-[85rem] px-4 pb-24 sm:px-6 lg:px-8 lg:pb-32">
    <div class="mx-auto max-w-4xl">
      <h2 class="mb-8 text-center text-2xl font-semibold text-slate-800">
        Recent Updates
      </h2>
      <div class="grid gap-6 md:grid-cols-2">
        {/* Placeholder news items */}
        <div class="rounded-2xl bg-white p-6 ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg">
          <div class="flex items-start gap-4">
            <div class="flex size-10 shrink-0 items-center justify-center rounded-lg bg-teal-100">
              <Icon name="newspaper" class="size-5 text-teal-600" />
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-slate-800">Industry Update</h3>
              <p class="mt-1 text-sm text-slate-600">
                Latest developments in automotive technology and market trends.
              </p>
              <a
                href="https://www.linkedin.com/company/gmtec-group"
                target="_blank"
                rel="noopener noreferrer"
                class="mt-2 inline-flex items-center text-sm font-medium text-teal-600 hover:text-teal-700"
              >
                Read more
                <Icon name="chevronRight" class="ml-1 size-4" />
              </a>
            </div>
          </div>
        </div>

        <div class="rounded-2xl bg-white p-6 ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg">
          <div class="flex items-start gap-4">
            <div class="flex size-10 shrink-0 items-center justify-center rounded-lg bg-teal-100">
              <Icon name="users" class="size-5 text-teal-600" />
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-slate-800">Partnership Announcement</h3>
              <p class="mt-1 text-sm text-slate-600">
                New collaborations and strategic partnerships in the automotive sector.
              </p>
              <a
                href="https://www.linkedin.com/company/gmtec-group"
                target="_blank"
                rel="noopener noreferrer"
                class="mt-2 inline-flex items-center text-sm font-medium text-teal-600 hover:text-teal-700"
              >
                Read more
                <Icon name="chevronRight" class="ml-1 size-4" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>